<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/edit-page" class="btn btn-default btn-sm">Edit</a>
        <% if (user.permissions.super_saiyen) { %>
            <a href="/admin" class="btn btn-default btn-sm">Super Admin</a>
            <a href="/mailbox" class="btn btn-default btn-sm">Mailbox</a>
        <% } %>
        <a href="/" class="btn btn-default btn-sm">Home</a>

    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                    <p>
                        <strong>Id</strong>: <%= user._id %><br>
                        <strong>Email</strong>: <%= user.local.email %><br>
                        <strong>First Name</strong>: <%= user.info_user.firstname %><br>
                        <strong>Last Name</strong>: <%= user.info_user.lastname %><br>
                        <strong>Birthday</strong>: <%= user.info_user.birthday %><br>
                        <strong>Super Saiyen</strong>: <%= user.permissions.super_saiyen %><br>
                        <strong>Ninja</strong>: <%= user.permissions.ninja %><br>
                        <strong>Mouche</strong>: <%= user.permissions.pathetic_human %><br>
                    </p>

            </div>
        </div>

    </div>

</div>
</body>
</html>