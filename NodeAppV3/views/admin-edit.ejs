<!DOCTYPE html>
	<html>
	<head>
		<title>Update profile</title>
		<link rel="stylesheet" type="text/css" href="stylesheets/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="stylesheets/style.css">
	</head>
	<body id="admin-edit-page">
		<div class="container">
			<div class="row">
				<div class="edit-page-title col-xs-5">
					<h1>Information User</h1>
				</div>
				<div class="edit-page-button col-xs-3 col-xs-offset-4">
					<a href="/">Home</a>
					<% if (user.permissions.super_saiyen) { %>
		            	<a href="/admin">Super Admin</a>
		       		<% } %>
					<a href="/logout">Log out</a>
				</div>
			</div>
			<hr />
			<div class="row edit-info">
				<form method="POST" class="edit-form">
					<div class="col-xs-12">
					 	<br /> 
						<label>Email:</label> <br />
						<input type="text" class="info_field" value="<%= user_data.local.email %>" name="email">
					</div>
					<div class="col-xs-12">
					 	<br />
						<label>First Name:</label> <br />
						<input type="text" class="info_field" value="<%= user_data.info_user.firstname %>" name="firstname">
					</div>
					<div class="col-xs-12">
						 <br />	
						<label>Last Name:</label> <br />
						<input type="text" class="info_field" value="<%= user_data.info_user.lastname %>" name="lastname">
					</div>
					<div class="col-xs-12">
						 <br />
						<label>Birthday:</label> <br />
						<input type="text" class="info_field" value="<%= user_data.info_user.birthday %>" name="birthday">
					</div>
					<div class="col-xs-12">
						<br />
						<button type="submit" class="btn btn-primary">Update</button>
					</div>
				</form>
			</div>
			<div class="edit-page-title">
				<h1>Permissions</h1>
				<hr />
			</div>
			<br />
			<div class="row edit-info">
				<form method="POST" class="edit-form">
						<div class="col-xs-12">
							<br />
							<select class="admin-select" name="power">
								<% if (user_data.permissions.super_saiyen == true) { %>
									<option value="ss" selected>Super_saiyen</option>
									<option value="nin">Ninja</option>
									<option value="ph">Pathetic_human</option>
								<% } else if (user_data.permissions.ninja == true) { %>
									<option value="ss">Super_saiyen</option>
									<option value="nin" selected>Ninja</option>
									<option value="ph">Pathetic_human</option>
								<% } else { %>
									<option value="ss">Super_saiyen</option>
									<option value="nin">Ninja</option>
									<option value="ph" selected>Pathetic_human</option>
								<% } %>
							</select>
						</div>
					<div class="col-xs-12">
						<br />
						<select class="admin-select" name="group">
							<% if (user_data.groups == "admin") { %> 
								<option class="admin-edit-select" value="users">User</option>
								<option class="admin-edit-select" value="admin" selected>Admin</option>
							<% } else { %>
								<option class="admin-edit-select" value="users" selected>User</option>
								<option class="admin-edit-select" value="admin">Admin</option>
							<% } %>
						</select>
					</div>
					<div class="col-xs-12">
						<br />
						<button type="submit" class="btn btn-primary">Update</button>
					</div>
				</form>
			</div>

			<div class="edit-page-title">
				<h1>Delete Account</h1>
				<hr />
			</div>
			<form method="POST" class="delete-user">
				<div class="row col-xs-12">
					<br />
					<button type="submit" class="btn btn-danger" name="delete" value="true">Delete</button>
				</div>
			</form>
		</div>
	</body>
</html>